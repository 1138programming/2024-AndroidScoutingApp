<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cham_background_default"
    tools:context=".TeleopFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/speakerMissedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_minus_default"
            android:textColor="@color/off_white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="@+id/speakerScoredTitle"
            app:layout_constraintStart_toStartOf="@+id/speakerScoredTitle"
            app:layout_constraintTop_toTopOf="@+id/ampMissedTitle" />
        <ImageButton
            android:id="@+id/speakerMissedMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/invisible"
            android:contentDescription="@string/minus_button"
            android:src="@drawable/remove_circle"
            app:layout_constraintStart_toStartOf="@+id/speakerScoredMinus"
            app:layout_constraintTop_toTopOf="@+id/speakerMissedTitle"
            app:tint="@color/checkbox_orange" />

        <ImageButton
            android:id="@+id/speakerMissedPlus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/invisible"
            android:contentDescription="@string/plus_button"
            android:cropToPadding="false"
            android:src="@drawable/add_circle"
            app:layout_constraintEnd_toEndOf="@+id/speakerScoredPlus"
            app:layout_constraintTop_toTopOf="@+id/speakerMissedTitle"
            app:tint="@color/checkbox_orange" />

        <ImageButton
            android:id="@+id/speakerScoredPlus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/invisible"
            android:contentDescription="@string/plus_button"
            android:cropToPadding="false"
            android:src="@drawable/add_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="@+id/speakerTitleTextBox"
            app:layout_constraintTop_toTopOf="@+id/speakerScoredTitle"
            app:tint="@color/checkbox_orange" />

        <ImageButton
            android:id="@+id/ampMissedPlus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/invisible"
            android:contentDescription="@string/plus_button"
            android:cropToPadding="false"
            android:src="@drawable/add_circle"
            app:layout_constraintEnd_toEndOf="@+id/ampScoredPlus"
            app:layout_constraintTop_toTopOf="@+id/ampMissedTitle"
            app:tint="@color/checkbox_orange" />

        <ImageButton
            android:id="@+id/ampMissedMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/invisible"
            android:contentDescription="@string/minus_button"
            android:src="@drawable/remove_circle"
            app:layout_constraintStart_toStartOf="@+id/ampScoredMinus"
            app:layout_constraintTop_toTopOf="@+id/ampMissedTitle"
            app:tint="@color/checkbox_orange" />

        <TextView
            android:id="@+id/ampMissedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/plus_minus_default"
            android:textColor="@color/off_white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="@+id/ampScoredTitle"
            app:layout_constraintStart_toStartOf="@+id/ampScoredTitle"
            app:layout_constraintTop_toBottomOf="@+id/ampScoredTitle" />

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teleop_title"
            android:textColor="@color/off_white"
            android:textSize="96sp"
            android:textStyle="normal|bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ampTitleTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/amp_title_default"
            android:textColor="@color/off_white"
            android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="@+id/ampScoredTitle"
            app:layout_constraintStart_toStartOf="@+id/ampScoredTitle"
            app:layout_constraintTop_toBottomOf="@+id/mainTitle" />

        <TextView
            android:id="@+id/speakerTitleTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speaker_title_default"
            android:textColor="@color/off_white"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/ampTitleTextBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view" />

        <TextView
            android:id="@+id/scoredTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="@string/score_title_default"
            android:textColor="@color/off_white"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ampTitleTextBox" />

        <TextView
            android:id="@+id/missedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/miss_title_default"
            android:textColor="@color/off_white"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="@+id/scoredTitle"
            app:layout_constraintTop_toBottomOf="@+id/scoredTitle" />

        <CheckBox
            android:id="@+id/hangQuestionCheckBox"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginStart="5dp"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:backgroundTint="@color/checkbox_orange"
            android:button="@null"
            app:layout_constraintStart_toEndOf="@+id/hang_title"
            app:layout_constraintTop_toBottomOf="@+id/endgame_title" />

        <CheckBox
            android:id="@+id/trapQuestionCheckBox"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:backgroundTint="@color/checkbox_orange"
            android:button="@null"
            app:layout_constraintEnd_toEndOf="@+id/hangQuestionCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/hangQuestionCheckBox" />

        <View
            android:id="@+id/view"
            android:layout_width="2sp"
            android:layout_height="350sp"
            android:background="@color/off_white"
            app:layout_constraintBottom_toBottomOf="@+id/ampMissedPlus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.59"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ampTitleTextBox" />

        <ImageButton
            android:id="@+id/ampScoredPlus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/invisible"
            android:contentDescription="@string/plus_button"
            android:cropToPadding="false"
            android:src="@drawable/add_circle"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toEndOf="@+id/scoredTitle"
            app:layout_constraintTop_toTopOf="@+id/ampScoredTitle"
            app:tint="@color/checkbox_orange" />

        <TextView
            android:id="@+id/ampScoredTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_minus_default"
            android:textColor="@color/off_white"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="@+id/scoredTitle"
            app:layout_constraintEnd_toStartOf="@+id/ampScoredPlus"
            app:layout_constraintStart_toEndOf="@+id/ampScoredMinus"
            app:layout_constraintTop_toTopOf="@+id/scoredTitle" />

        <ImageButton
            android:id="@+id/ampScoredMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/invisible"
            android:contentDescription="@string/minus_button"
            android:src="@drawable/remove_circle"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintHorizontal_bias="0.45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ampScoredTitle"
            app:tint="@color/checkbox_orange" />

        <TextView
            android:id="@+id/speakerScoredTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_minus_default"
            android:textColor="@color/off_white"
            android:textSize="60sp"
            app:layout_constraintEnd_toStartOf="@+id/speakerScoredPlus"
            app:layout_constraintStart_toEndOf="@+id/speakerScoredMinus"
            app:layout_constraintTop_toTopOf="@+id/ampScoredTitle" />

        <ImageButton
            android:id="@+id/speakerScoredMinus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:backgroundTint="@color/invisible"
            android:contentDescription="@string/minus_button"
            android:src="@drawable/remove_circle"
            app:layout_constraintEnd_toEndOf="@+id/speakerTitleTextBox"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/speakerScoredTitle"
            app:tint="@color/checkbox_orange" />
        <Button
            android:id="@+id/returnToAuton"
            android:layout_width="300sp"
            android:layout_height="120sp"
            android:text="@string/default_back_button_title"
            android:textSize="48sp"
            android:textColor="@color/cham_background_default"
            android:backgroundTint="@color/checkbox_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="300sp"
            android:layout_height="120sp"
            android:text="@string/submit_button_text"
            android:textSize="48sp"
            android:textColor="@color/cham_background_default"
            android:backgroundTint="@color/checkbox_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/endgame_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:text="@string/endgame_title"
            android:textColor="@color/off_white"
            android:textSize="80sp"
            app:layout_constraintStart_toStartOf="@+id/missedTitle"
            app:layout_constraintTop_toBottomOf="@+id/ampMissedMinus" />

        <TextView
            android:id="@+id/hang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/hang_title"
            android:textSize="48sp"
            android:textColor="@color/off_white"
            app:layout_constraintBottom_toBottomOf="@+id/hangQuestionCheckBox"
            app:layout_constraintStart_toStartOf="@+id/endgame_title"
            app:layout_constraintTop_toTopOf="@+id/hangQuestionCheckBox" />

        <TextView
            android:id="@+id/trap_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trap_title"
            android:textSize="48sp"
            android:textColor="@color/off_white"
            app:layout_constraintBottom_toBottomOf="@+id/trapQuestionCheckBox"
            app:layout_constraintStart_toStartOf="@+id/hang_title"
            app:layout_constraintTop_toBottomOf="@+id/hangQuestionCheckBox" />

        <TextView
            android:id="@+id/startHangingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_hang_title"
            android:textColor="@color/off_white"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/hang_title"
            app:layout_constraintStart_toStartOf="@+id/ampMissedPlus" />

        <TextView
            android:id="@+id/startedHangingExplination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_hang_explination"
            android:textColor="@color/off_white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/startHangingTitle"
            app:layout_constraintTop_toBottomOf="@+id/startHangingTitle" />

        <EditText
            android:id="@+id/startedHangingInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textSize="32sp"
            android:maxLength="2"
            android:textColor="@color/off_white"
            app:layout_constraintStart_toStartOf="@+id/startedHangingExplination"
            app:layout_constraintTop_toTopOf="@+id/trap_title" />

        <TextView
            android:id="@+id/robotBrokeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/robot_break_check"
            android:textColor="@color/off_white"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="@+id/robotBreakCheckbox"
            app:layout_constraintStart_toStartOf="@+id/trap_title"
            app:layout_constraintTop_toTopOf="@+id/robotBreakCheckbox" />

        <CheckBox
            android:id="@+id/robotBreakCheckbox"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_marginStart="5dp"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:backgroundTint="@color/checkbox_orange"
            android:button="@null"
            app:layout_constraintStart_toEndOf="@+id/robotBrokeTitle"
            app:layout_constraintTop_toBottomOf="@+id/trapQuestionCheckBox" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>