<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".BluetoothSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black"
        android:alpha="0.5"
        android:clickable="true">
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="510sp"
        android:layout_height="610sp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/popup_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="500sp"
            android:layout_height="600sp"
            android:background="@drawable/popupbg"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>

        <TextView
            android:id="@+id/bt_settings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/bluetooth_settings_title"
            android:textColor="@color/off_white"
            android:textSize="56sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/mac_change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/bluetooth_mac_title"
            android:textColor="@color/off_white"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/port_change_title"
            app:layout_constraintStart_toStartOf="@+id/backButton"
            app:layout_constraintTop_toBottomOf="@+id/bt_settings_title" />

        <EditText
            android:id="@+id/macInput"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="17"
            android:maxLength="17"
            android:digits="0123456789ABCDEF:"
            android:inputType="textCapCharacters"
            android:hint="eee"
            app:layout_constraintBottom_toBottomOf="@+id/mac_change_title"
            app:layout_constraintEnd_toEndOf="@+id/portInput"
            app:layout_constraintTop_toTopOf="@+id/mac_change_title" />

        <TextView
            android:id="@+id/port_change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="@string/bluetooth_port_title"
            android:textColor="@color/off_white"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/backButton"
            app:layout_constraintStart_toStartOf="@+id/backButton"
            app:layout_constraintTop_toBottomOf="@+id/bt_settings_title"
            app:layout_constraintVertical_bias="0.6" />

        <EditText
            android:id="@+id/portInput"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="2"
            android:maxLength="2"
            android:inputType="number"
            android:hint="eee"
            app:layout_constraintBottom_toBottomOf="@+id/port_change_title"
            app:layout_constraintEnd_toEndOf="@+id/saveButton" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/chaminade_orange"
            android:text="@string/back_button"
            android:textSize="32sp"
            android:textColor="@color/cham_background_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:backgroundTint="@color/chaminade_orange"
            android:text="@string/save_button"
            android:textColor="@color/cham_background_default"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/backButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/backButton"
            app:layout_constraintVertical_bias="0.65" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>